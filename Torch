<div class="container">
  <img id="flame" src="flame1.png">
  <img id="torch" src="Propane torch.png"/>
  <input id="valR" type="range" min="1" max="12" value="1" step="1" oninput="showVal(this.value)" onchange="showVal(this.value)" />
  <span id="range">0</span>
</div>

<script>

var val = document.getElementById("valR").value;
    document.getElementById("range").innerHTML=val;
    document.getElementById("flame").src = val + ".png";
    function showVal(newVal){
      document.getElementById("range").innerHTML=newVal;
      document.getElementById("flame").src = newVal+ ".png";
    }
</script>
